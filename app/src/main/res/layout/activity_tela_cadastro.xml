<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="76px"
    android:layout_marginStart="20px"
    android:layout_marginLeft="20px"
    android:layout_marginTop="45px"
    android:layout_marginEnd="20px"
    android:layout_marginRight="30px"
    android:layout_marginBottom="17px"
    android:orientation="vertical"
    tools:context=".TelaCadastro">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:layout_marginEnd="20px"
        android:layout_marginBottom="20px"
        android:fontFamily="@font/arimo_bold"
        android:text="@string/activity_tela_cadastro_usuario"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/UserInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:fontFamily="@font/arimo_bold"
        android:text="@string/activity_tela_cadastro_senha"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/PasswordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:fontFamily="@font/arimo_bold"
        android:text="@string/activity_tela_cadastro_email"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextTextPostalAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_tela_cadastro_curso" />

    <Spinner
        android:id="@+id/CursoInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>